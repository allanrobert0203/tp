@startuml
!include style.puml
skinparam ClassFontColor #000000
skinparam ClassBorderColor #000000
skinparam ClassBackgroundColor #FFFFAA

title Initial state

package States {
    class State1 as "<u>f0:Findr</u>"
    class State2 as "<u>f1:Findr</u>"
    class State3 as "<u>f2:Findr</u>"
}
State1 -[hidden]right-> State2
State2 -[hidden]right-> State3
hide States.State2
hide States.State3

class Pointer as "Current State" #FFFFFF
Pointer -up-> State1
@end
